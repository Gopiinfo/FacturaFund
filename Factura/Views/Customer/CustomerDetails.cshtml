@model VM.CustomerDetailsVM
@{
    ViewData["Title"] = "Customer Information";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/js/Customer/Customer.js"></script>

<h4 class="mb-4 h5 mt-5">Customer Information</h4>

<form asp-action="CustomerDetails">


    <div class="row">
        <div class="mb-3 col-md-6">
            <label asp-for="FirstName" class="form-label">First name</label>
            <input type="text" placeholder="First Name" class="form-control" asp-for="FirstName" />
            <span asp-validation-for="FirstName" class="text-danger font-weight-bold"></span>
        </div>
        <div class="mb-3 col-md-6">
            <label asp-for="LastName" class="form-label">Last name</label>
            <input type="text" placeholder="Last Name" class="form-control" asp-for="LastName" />
            <span asp-validation-for="LastName" class="text-danger font-weight-bold"></span>
        </div>
    </div>

    <div class="row">
        <div class="mb-3 col-md-4">
            <label asp-for="Gender" class="form-label">Gender</label>
            <select class="form-select" asp-for="Gender">
                <option value="" selected>--Select--</option>
                <option value="M">Male</option>
                <option value="F">Female</option>
                <option value="T">Trangender</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger font-weight-bold"></span>
        </div>
        <div class="mb-3 col-md-4">
            <label asp-for="MaritalStatus" class="form-label">MaritalStatus</label>
            <select class="form-select" asp-for="MaritalStatus">
                <option value="" selected>--Select--</option>
                <option value="M">Married</option>
                <option value="U">Un Married</option>
            </select>
            <span asp-validation-for="MaritalStatus" class="text-danger font-weight-bold"></span>
        </div>
        <div class="mb-3 col-md-4">
            <label asp-for="DateOfBirth" class="form-label">Date of Birth</label>
            <input type="text" placeholder="Date of Birth" class="form-control flatpickr" asp-for="DateOfBirth" />
            <span asp-validation-for="DateOfBirth" class="text-danger font-weight-bold"></span>
        </div>


    </div>

    <div class="row">
        <div class="mb-3 col-md-4">
            <label asp-for="Mobile1" class="form-label">Mobile1</label>
            <input type="text" placeholder="Mobile Number1" class="form-control" asp-for="Mobile1" />
            <span asp-validation-for="Mobile1" class="text-danger font-weight-bold"></span>
        </div>
        <div class="mb-3 col-md-4">
            <label asp-for="Mobile2" class="form-label">Mobile2</label>
            <input type="text" placeholder="Mobile Number2" class="form-control" asp-for="Mobile2" />
            <span asp-validation-for="Mobile2" class="text-danger font-weight-bold"></span>
        </div>
        <div class="mb-3 col-md-4">
            <label asp-for="Mobile3" class="form-label">Mobile3</label>
            <input type="text" placeholder="Mobile Number3" class="form-control" asp-for="Mobile3" />
        </div>
    </div>

    <div class="row">
        <div class="mb-3 col-12">
            <label asp-for="Address" class="form-label">Communication Full Address</label>
            <input type="text" placeholder="Door no,Street,Post,.." class="form-control" asp-for="Address" />
            <span asp-validation-for="Address" class="text-danger font-weight-bold"></span>
        </div>
    </div>

    <div class="row">
        <div class="mb-3 col-md-4">
            <label asp-for="Pincode" class="form-label">Pincode</label>
            <input type="text" placeholder="Pincode" class="form-control" asp-for="Pincode" />
            <span asp-validation-for="Pincode" class="text-danger font-weight-bold"></span>
        </div>
        <div class="mb-3 col-md-4">
            <label asp-for="PANNumber" class="form-label">PAN name</label>
            <input type="text" placeholder="PAN Number" class="form-control" asp-for="PANNumber" />
            <span asp-validation-for="PANNumber" class="text-danger font-weight-bold"></span>
        </div>

        <div class="mb-3 col-md-4">
            <label asp-for="Email" class="form-label">Email</label>
            <input type="text" placeholder="Email" class="form-control" asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger font-weight-bold"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <input type="submit" value="Next" name="btnNext" class="btn btn-primary" />
        </div>
    </div>

</form>

